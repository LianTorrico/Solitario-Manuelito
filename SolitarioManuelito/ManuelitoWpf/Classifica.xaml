<Window x:Class="ManuelitoWpf.Classifica"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManuelitoWpf"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="350"
      Title="Classifica">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="images/classifica.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <ListBox x:Name="lst_classifica" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="12,123,-12,22" Background="Transparent" Grid.ColumnSpan="2" BorderBrush="#00ABADB3" Foreground="White" FontWeight="Bold" FontSize="20" FontFamily="Verdana"/>
        <Label Content="Classifica" HorizontalAlignment="Left" Height="63" Margin="0,28,0,0" VerticalAlignment="Top" Width="350" Foreground="White" FontSize="48" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" FontFamily="Verdana"/>
    </Grid>
</Window>
