<Page x:Class="ManuelitoWpf.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManuelitoWpf"
      mc:Ignorable="d" 
      d:DesignHeight="730" d:DesignWidth="350"
      Title="Menù">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/menu.png" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <Button x:Name="btn_Gioca" Content="Gioca" HorizontalAlignment="Center" Margin="0,399,0,0" VerticalAlignment="Top" Height="60" Width="204" BorderBrush="{x:Null}" Click="btn_Gioca_Click" Background="#FF27A216" Foreground="White" FontSize="28" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"></Setter>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
